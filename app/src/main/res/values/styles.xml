<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText" />

    <style name="SectionTitleText"/>


    <style name="SectionDataText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextAccent</item>
    </style>

    <style name="DataText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DataTextSmall">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DataTextMedium">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="DataTextLargAccent" parent="DataText">
        <item name="android:textColor">@color/colorTextAccent</item>
    </style>

</resources>
